{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noImplicitUseStrict": true,
    "esModuleInterop": true,
    "declaration": true,
    "lib": [
      "es6"
    ],
    "baseUrl": "./",
    "paths": {
      "@orga/*": ["./packages/*/src"]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]

}
